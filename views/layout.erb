<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HomeChekr</title>
  <link rel='stylesheet' href='/stylesheets/reset.css'>
  <link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/style.css'>
</head>
<body>
  
  <nav>
    <div class="nav-btn">
      <span>Search</span>
    </div>

    <a href="/properties"><h1>HomeCheckr</h1></a>

    <%# If logged in %>
    <% if logged_in? %>
      <div class="nav-btn">
        <form action="/session" method="post">
          <input type="hidden" name="_method" value="delete">
          <button>logout</button>
        </form>
      </div>
    <% else %>
      <div class="nav-btn">
        <a href="/login"><span>Login</span></a>
      </div>
    <% end %>
 
  </nav>


  <% if logged_in? %>
    <form action="/session" method="post">
      <input type="hidden" name="_method" value="delete">
      <button class="btn-simple">logout</button>
    </form>
    logged in as: <%= current_user.email %>
      <br>
    <a href="/properties" class="btn-simple">View all saved properties</a>
    <a href="/properties/new" class="btn-simple">Add a property</a>
    <% else %>
    <a href="/login" class="btn-simple">login</a>
  <% end %>

  <%= yield %>

</body>
</html>